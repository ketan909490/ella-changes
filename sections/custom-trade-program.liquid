{% schema %}
{
  "name": "Trade Program Application",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Form Title",
      "default": "Trade Program Application Form"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Form Description",
      "default": "Please fill out the application form below to be considered for a trade account. A representative will be in touch with you within 48 business hours of your submission."
    }
  ],
  "presets": [
        {
            "name": "Trade Program Application"
        }
    ],
}
{% endschema %}

<section class="page-width py-10 trade-program-form">
    <div class="trade-form-wrapper">
  <div class="max-w-3xl mx-auto text-center mb-8">
    <h2 class="text-2xl font-bold">{{ section.settings.title }}</h2>
    <p class="mt-2 text-gray-700">{{ section.settings.description }}</p>
  </div>

  {% form 'contact', class: "grid grid-cols-1 md:grid-cols-2 gap-4" %}
    {% if form.posted_successfully? %}
      <p class="col-span-2 text-center text-green-600 font-medium bg-green-100 border border-green-300 p-3 rounded">
        âœ… Thank you! Your application has been submitted successfully.
      </p>
    {% endif %}

    {% if form.errors %}
      <div class="col-span-2 text-center text-red-600 bg-red-100 border border-red-300 p-3 rounded">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}
    <div class="trade-form">
    <!-- Preset Subject/Tag -->
    <input type="hidden" name="contact[tags]" value="Trade Program Application">
    <input type="hidden" name="contact[subject]" value="New Trade Program Application">

    <!-- Row 1 -->
    <input type="text" name="contact[first_name]" placeholder="First Name *" required value="{{ form.first_name }}">
    <input type="text" name="contact[last_name]" placeholder="Last Name *" required value="{{ form.last_name }}">

    <!-- Row 2 -->
    <input type="email" name="contact[business_email]" placeholder="Business Email">
    <input type="text" name="contact[company_name]" placeholder="Company Name">

    <!-- Row 3 -->
    <input type="number" name="contact[phone]" placeholder="Phone *" required value="{{ form.phone }}">
    <input type="email" name="contact[email]" placeholder="Email *" required value="{{ form.email }}">

    <!-- Row 4 -->
    <input type="text" name="contact[company_website]" placeholder="Company Website">
    <input type="text" name="contact[company_instagram]" placeholder="Company Instagram or LinkedIn">

    <!-- Row 5 -->
    <input type="text" name="contact[address]" placeholder="Street Address *" required>
    <input type="text" name="contact[city]" placeholder="City">

    <!-- Row 6 -->
    <input type="text" name="contact[state]" placeholder="State">
    <input type="number" name="contact[zip]" placeholder="Zip Code">
    <div class="col-span-2 text-center mt-6">
      <button type="submit" class="button button--primary" value="{{ 'templates.contact.form.send' | t }}" role="button" data-button-message="contact">
        Submit Application
      </button>
    </div>
    </div>
    <!-- Submit -->
    
  {% endform %}
  </div>
</section>

<style>
.trade-form-wrapper {
  max-width: 1000px;
  margin: 0 auto;
  padding: 10px;
}

.trade-form-wrapper h2 {
  text-align: center;
  font-size: 28px;
  margin-bottom: 10px;
}

.trade-form-wrapper p {
  text-align: center;
  font-size: 18px;
  margin-bottom: 30px;
  line-height: 1.5;
}

.trade-form {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.trade-form input,
.trade-form textarea {
  width: 100%;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 3px;
  font-size: 18px;
}

.trade-form input:focus,
.trade-form textarea:focus {
  border-color: #000;
  outline: none;
}

.trade-form .full-width {
  grid-column: span 2;
}

.trade-form button {
  grid-column: span 2;
  background: #000;
  color: #fff;
  border: none;
  padding: 18px;
  font-size: 18px;
  text-transform: uppercase;
  font-weight: bold;
  cursor: pointer;
  transition: 0.3s ease;
}

.trade-form button:hover {
  background: #333;
}

</style>